{
  "pluginAlias": "UnifiOS",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "username": {
        "title": "Username",
        "type": "string",
        "required": true
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true
      },
      "notifications": {
        "title": "Get notified for device status changes?",
        "type": "boolean",
        "required": false,
        "default": false
      },
      "siteName": {
        "title": "Site Name",
        "type": "string",
        "required": false,
        "default": "default"
      },
      "controllerAddress": {
        "title": "Controller Address",
        "type": "string",
        "required": true,
        "default": "192.168.1.1"
      },
      "controllerPort": {
        "title": "Controller Port",
        "type": "string",
        "required": false,
        "default": "443"
      }
    }
  }
}